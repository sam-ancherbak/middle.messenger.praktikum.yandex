{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2017",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["./src/", "./custom.d.ts"],
  "exclude": ["node_modules"]
}
